<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ivMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="@string/ivMain"
            android:scaleType="centerCrop"
            android:src="@drawable/main_menu_bg" />

        <TableRow
            android:id="@+id/topTable"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:text="@string/tvScore"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurrentScore"
                android:layout_width="172dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/moneybag"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/moneybag" />

            <TextView
                android:id="@+id/moneyScore"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp" />


        </TableRow>


        <TableRow
            android:id="@+id/topTable2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="520dp"
            android:background="#005e00">

            <TextView
                android:id="@+id/tvClickSpeed"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16px"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="198dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:id="@+id/topTable3"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="557dp"
            android:background="@color/colorPrimaryDarkish">

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="18dp"

                />

        </TableRow>

        <ImageView
            android:id="@+id/ivPlayButton"
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="151dp"
            android:contentDescription="@string/ivPlay_name"

            android:onClick="getPoint"
            android:src="@drawable/science_btn" />

        <TableRow
        android:id="@+id/tableBot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp">

    </TableRow>

        <Button
            android:id="@+id/openMenu"
            android:layout_width="213dp"
            android:layout_height="94dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shop_btn"
            android:enabled="true" />

        <Button
            android:id="@+id/resetGame"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:layout_marginStart="-187dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/repeat_btn"
            android:enabled="true" />

    </RelativeLayout>

</LinearLayout>